<?xml version="1.0"?>
<launch>

  <arg name="joy_dev" default="$(optenv ROVER_JOY_DEVICE /dev/input/js0)" />
  <arg name="joystick" default="true" />
  <arg name="keyboard" default="true" />

  <group ns="joy_teleop" if="$(arg joystick)">
    <group unless="$(optenv ROVER_LOGITECH 0)" >
      <rosparam command="load" file="$(find rover_control)/config/teleop_ps4.yaml" />
    </group>

    <group if="$(optenv ROVER_LOGITECH 0)" >
      <rosparam command="load" file="$(find rover_control)/config/teleop_logitech.yaml" />
      <param name="joy_node/dev" value="$(arg joy_dev)" />
    </group>

    <node pkg="joy" type="joy_node" name="joy_node" if="$(arg joystick)" />
    <node pkg="teleop_twist_joy" type="teleop_node" name="teleop_twist_joy"/>
  </group>

  <group ns="kb_teleop" if="$(arg keyboard)" >
    <node pkg="teleop_twist_keyboard" type="teleop_twist_keyboard.py" name="teleop_twist_kb" />
  </group>
